<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="4dp"
    android:id="@+id/card_view_booking_list"
    android:layout_gravity="center"
    android:foreground="?selectableItemBackgroundBorderless"
    card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/list_item_book_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:padding="24dp"
            android:text="@string/booking_time" />

        <TextView
            android:id="@+id/list_item_book_user_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/list_item_book_time_textview"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:text="@string/booking_user_name"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/list_item_book_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/book_close"
            android:layout_gravity="end"/>

</android.support.v7.widget.CardView>
